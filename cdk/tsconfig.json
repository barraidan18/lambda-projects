{
  "compilerOptions": {
    "target": "ES2020",             // Or "ESNext"
    "module": "CommonJS",           // Or "ESNext", "Node16", etc., depending on your preference
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",     // Crucial for resolving 'path' and other Node.js modules
    "types": ["node", "jest"]       // Ensure 'node' is included here
  },
  "include": ["lib/**/*.ts", "bin/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "cdk.out"]
}